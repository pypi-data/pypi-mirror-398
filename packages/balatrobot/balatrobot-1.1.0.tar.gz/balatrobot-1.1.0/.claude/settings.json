{
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(ty check:*)"
    ],
    "deny": [
      "Edit(CHANGELOG.md)",
      "Write(CHANGELOG.md)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "stylua .",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "ruff format",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "ruff check --select I --fix",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "ty check",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "mdformat .",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
