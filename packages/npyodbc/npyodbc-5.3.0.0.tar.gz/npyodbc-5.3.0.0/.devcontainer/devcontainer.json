{
  "name": "npyodbc-devcontainer",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "ms-azuretools.vscode-docker",
        "ms-python.isort",
        "ms-python.python",
        "ms-python.vscode-black-formatter",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "shardulm94.trailing-spaces",
        "streetsidesoftware.code-spell-checker",
        "tamasfe.even-better-toml",
        "xaver.clang-format"
      ],
      "settings": {
        "edigor.formatOnSave": true,
        "clang-format.executable": "/usr/bin/clang-format",
        "python.defaultInterpreterPath": "/home/mssql/venv/bin/python",
        "python.formatting.blackPath": "/home/mssql/venv/bin/black",
        "python.formatting.provider": "black",
        "python.terminal.activateEnvInCurrentTerminal": true,
        "isort.path": [
          "/home/mssql/venv/bin/isort"
        ],
        "[python]": {
          "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
          }
        }
      }
    }
  },
  "containerUser": "mssql",
  "remoteUser": "mssql",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/mssql/npyodbc,type=bind",
  "workspaceFolder": "/home/mssql/npyodbc",
  "postCreateCommand": "pip install ."
}
