# Exclude Python cache files
global-exclude __pycache__/
global-exclude *.py[cod]
global-exclude *$py.class

# Exclude build artifacts
prune build/
prune dist/
prune *.egg-info/

# Exclude tests from source distribution
prune tests/

# Exclude notebooks
prune examples/notebooks/

# Include essential metadata files
include README.md
include LICENSE

# Include version file
include vaas/_version.py
