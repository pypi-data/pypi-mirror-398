# Configuration for direct Anthropic API access
# This configuration uses Anthropic's API directly in passthrough mode

# Provider Configuration
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_API_FORMAT=anthropic
VDM_DEFAULT_PROVIDER=anthropic

# Optional: Require client authentication
# If set, clients must provide this exact API key
# PROXY_API_KEY=sk-ant-client-...

# Server Settings
HOST=0.0.0.0
PORT=8082
LOG_LEVEL=INFO

# Performance Settings
REQUEST_TIMEOUT=90
MAX_RETRIES=2
