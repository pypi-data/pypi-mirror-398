{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume Data Schema",
  "description": "Schema for the resume data used by the wrok-docx resume generator API.",
  "type": "object",
  "required": [
    "name",
    "email",
    "phone",
    "location",
    "linkedin",
    "education",
    "roles"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name of the candidate."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Professional email address."
    },
    "phone": {
      "type": "string",
      "description": "Contact phone number."
    },
    "location": {
      "type": "string",
      "description": "Current city, state, and ZIP code."
    },
    "linkedin": {
      "type": "string",
      "format": "uri",
      "description": "Full URL to LinkedIn profile."
    },
    "education": {
      "type": "object",
      "required": [
        "title",
        "college",
        "location",
        "period"
      ],
      "properties": {
        "title": {
          "type": "string",
          "description": "Degree name and field of study."
        },
        "college": {
          "type": "string",
          "description": "Name of the institution."
        },
        "location": {
          "type": "string",
          "description": "City and country of the institution."
        },
        "period": {
          "type": "string",
          "description": "Graduation date or time period."
        },
        "gpa": {
          "type": "string",
          "description": "Grade point average (optional)."
        }
      }
    },
    "roles": {
      "type": "array",
      "description": "List of professional roles in reverse chronological order.",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "company",
          "title",
          "locations",
          "achievements"
        ],
        "properties": {
          "company": {
            "type": "string",
            "description": "Company name."
          },
          "title": {
            "type": "string",
            "description": "Job title."
          },
          "locations": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": [
                "location",
                "start_date",
                "end_date"
              ],
              "properties": {
                "location": {
                  "type": "string",
                  "description": "City and country."
                },
                "start_date": {
                  "type": "string",
                  "description": "Start date (e.g., 'Jan 2022')."
                },
                "end_date": {
                  "type": "string",
                  "description": "End date or 'Present'."
                }
              }
            }
          },
          "achievements": {
            "type": "array",
            "description": "List of key accomplishments.",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "skills": {
      "type": "array",
      "description": "List of technical and professional skills.",
      "items": {
        "type": "string"
      }
    }
  }
}
