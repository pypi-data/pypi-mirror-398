<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sinli_import_sale_order_wizard" model="ir.ui.view">
        <field name="name">Importar pedidos de SINLI</field>
        <field name="model">import.sinli.file</field>
        <field name="arch" type="xml">
            <form>
                <p>Adjunta el fichero (formato SINLI) que contenga los pedidos de venta que deseas importar.</p>
                <field name="sinli_file"></field>

                <footer>
                    <button string="Importar venta" name="import_sale_orders" class="oe_highlight" type="object"/>
                    <button name="cancel" string="Cancelar" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sinli_import_sale_order_action" model="ir.actions.act_window">
        <field name="name">Importar pedidos de SINLI</field>
        <field name="res_model">import.sinli.file</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sinli_import_sale_order_wizard"/>
        <field name="target">new</field>
    </record>

</odoo>