{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.bpamiri/pymssql-mcp",
  "title": "PyMSSQL MCP Server",
  "description": "Connect AI assistants to Microsoft SQL Server databases via MCP.",
  "version": "0.1.0",
  "websiteUrl": "https://github.com/bpamiri/pymssql-mcp",
  "repository": {
    "url": "https://github.com/bpamiri/pymssql-mcp",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "pypi",
      "registryBaseUrl": "https://pypi.org",
      "identifier": "pymssql-mcp",
      "version": "0.1.0",
      "runtimeHint": "uvx",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "MSSQL_HOST",
          "description": "SQL Server hostname or IP address",
          "required": true
        },
        {
          "name": "MSSQL_USER",
          "description": "Database username",
          "required": true
        },
        {
          "name": "MSSQL_PASSWORD",
          "description": "Database password",
          "required": true,
          "secret": true
        },
        {
          "name": "MSSQL_DATABASE",
          "description": "Database name to connect to",
          "required": true
        },
        {
          "name": "MSSQL_PORT",
          "description": "SQL Server port",
          "required": false,
          "default": "1433"
        },
        {
          "name": "MSSQL_READ_ONLY",
          "description": "Disable write operations for safe exploration",
          "required": false,
          "default": "false"
        },
        {
          "name": "MSSQL_MAX_ROWS",
          "description": "Maximum rows returned from SELECT queries",
          "required": false,
          "default": "10000"
        },
        {
          "name": "MSSQL_QUERY_TIMEOUT",
          "description": "Query timeout in seconds",
          "required": false,
          "default": "30"
        },
        {
          "name": "MSSQL_BLOCKED_COMMANDS",
          "description": "Comma-separated list of blocked SQL commands",
          "required": false,
          "default": "DROP,TRUNCATE,ALTER,GRANT,REVOKE,SHUTDOWN,KILL"
        }
      ]
    }
  ]
}
