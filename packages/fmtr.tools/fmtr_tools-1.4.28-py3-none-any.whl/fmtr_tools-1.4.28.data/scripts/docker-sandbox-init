#!/bin/bash

cd /opt/dev/repo/fmtr.tools/scripts
. parse-args "$@"

echo "Setting up sandbox..."

./set-password
./set-password --username=user

echo "user ALL=(ALL) NOPASSWD:ALL" | tee /etc/sudoers.d/user
chmod 440 /etc/sudoers.d/user

echo "Defaults secure_path=\"${PATH}\"" | tee /etc/sudoers.d/secure_path_user_bin
chmod 440  /etc/sudoers.d/secure_path_user_bin

sudo -u user -H pip install --user fmtr.tools --upgrade