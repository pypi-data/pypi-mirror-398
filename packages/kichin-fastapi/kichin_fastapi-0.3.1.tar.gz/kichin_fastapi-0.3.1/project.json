{
  "name": "lib-py-kichin-fastapi",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "lib-py-kichin-fastapi/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python -m build --outdir ../dist/lib-py-kichin-fastapi",
        "cwd": "lib-py-kichin-fastapi"
      },
      "outputs": ["{workspaceRoot}/dist/lib-py-kichin-fastapi"]
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run twine upload ../dist/lib-py-kichin-fastapi/*",
        "cwd": "lib-py-kichin-fastapi"
      },
      "dependsOn": ["build"]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf ../dist/lib-py-kichin-fastapi dist",
        "cwd": "lib-py-kichin-fastapi"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest",
        "cwd": "lib-py-kichin-fastapi"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff check .",
        "cwd": "lib-py-kichin-fastapi"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff format .",
        "cwd": "lib-py-kichin-fastapi"
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run ruff format --check .",
        "cwd": "lib-py-kichin-fastapi"
      }
    }
  }
}
