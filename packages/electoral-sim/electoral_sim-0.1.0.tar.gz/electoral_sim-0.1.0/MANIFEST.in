# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include package data
recursive-include electoral_sim/data *.csv *.json
include electoral_sim/py.typed

# Include tests (for source distributions)
recursive-include tests *.py

# Exclude development files
exclude .gitignore
exclude TODO.md
exclude USAGE.md
exclude app.py
exclude demo_animation.py
exclude opinion_dynamics.gif

# Exclude directories
prune .git
prune .venv
prune .pytest_cache
prune __pycache__
prune docs
prune scripts
prune examples
