# Salesforce Toolkit - Environment Variables Configuration Example
# Copy this file to .env and fill in your values

# ============================================================================
# Salesforce Authentication - JWT Bearer Flow (Recommended)
# ============================================================================
SF_CLIENT_ID=3MVG9...  # Consumer Key from Salesforce Connected App
SF_USERNAME=user@example.com.sandbox  # Salesforce username
SF_PRIVATE_KEY_PATH=/path/to/server.key  # Path to RSA private key
SF_LOGIN_URL=https://test.salesforce.com  # Production: https://login.salesforce.com

# ============================================================================
# Salesforce Authentication - OAuth Password Flow (Alternative)
# ============================================================================
# SF_CLIENT_ID=3MVG9...  # Consumer Key
# SF_CLIENT_SECRET=1234567890ABCDEF  # Consumer Secret
# SF_USERNAME=user@example.com
# SF_PASSWORD=your_password
# SF_SECURITY_TOKEN=ABC123XYZ456  # Security token (if required)
# SF_LOGIN_URL=https://login.salesforce.com

# ============================================================================
# Salesforce API Configuration
# ============================================================================
SF_API_VERSION=v60.0  # Salesforce API version

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_DIR=./logs  # Directory for log files
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_CONSOLE_OUTPUT=true  # Enable console output
LOG_CONSOLE_COLORS=true  # Enable colored console output

# ============================================================================
# Database Configuration (Optional - for data sources)
# ============================================================================
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=mydb
# DATABASE_USER=dbuser
# DATABASE_PASSWORD=dbpassword

# ============================================================================
# Pipeline Configuration (Optional)
# ============================================================================
# SYNC_BATCH_SIZE=200  # Default batch size for sync operations
# SYNC_STOP_ON_ERROR=false  # Stop sync on first error
