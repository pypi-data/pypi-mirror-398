{
  "compose": {
    "servers": [
      {
        "name": "server",
        "build": {
          "context": "./servers/server/"
        },
        "env_file": "./servers/server/.env",
        "ports": [
          "25565:25565"
        ],
        "expose": [],
        "resources": {
          "limits": {
            "cpus": 1,
            "memory": "1g"
          },
          "reservations": {
            "cpus": 1,
            "memory": "1g"
          }
        }
      }
    ],
    "database": {
      "user": "user",
      "password": "password",
      "db": "mydb"
    },
    "web": true
  },
  "envs": [
    {
      "CONTAINER_NAME": "server",
      "SERVER_JAR": "server.jar",
      "JAVA_ARGS": "",
      "MIN_HEAP_SIZE": "256M",
      "MAX_HEAP_SIZE": "1024M",
      "HOST_PORTS": {
        "HOST_PORT": 25565
      }
    }
  ],
  "server_files": [
    {
      "name": "server",
      "server": {
          "jar_file": "server.jar",
          "type": "paper",
          "version": "1.20.1"
      }
    }
  ]
}
