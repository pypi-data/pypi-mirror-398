/* Nord Theme
 * Arctic, north-bluish color palette
 * Created by Arctic Ice Studio
 * Popular in developer communities for its eye-friendly cool tones
 */

/* Polar Night (backgrounds) */
$background: #2e3440;
$surface: #3b4252;
$panel-bg: #434c5e;

/* Frost (primary colors) */
$primary: #5e8d9a;
$accent: #88c0d0;

/* Snow Storm (text) */
$text: #eceff4;
$text-muted: #d8dee9;

/* Aurora (status colors) */
$warning: #ebcb8b;
$error: #bf616a;
$success: #a3be8c;
$boost: #b48ead;

/* Main layout */
Screen {
    background: $surface;
}

#app-body {
    height: 100%;
    background: $surface;
}

#status-bar {
    height: 1;
    background: $panel-bg;
    padding: 0 1;
    dock: top;
}

#breadcrumb {
    width: 1fr;
    text-style: bold;
    color: $accent;
}

#stats {
    width: auto;
    color: $text-muted;
    text-align: right;
}

#content-area {
    height: 1fr;
    padding: 0 1;
}

#loading {
    height: 3;
    align: center middle;
}

#loading-status {
    height: auto;
    text-align: center;
    color: $accent;
    margin: 1 0;
    text-style: bold;
}

#data-table {
    height: 1fr;
    border: solid $primary;
}

DataTable > .datatable--header {
    background: $primary;
    color: $text;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $accent;
    color: $text;
}

DataTable > .datatable--even-row {
    background: $surface;
}

DataTable > .datatable--odd-row {
    background: $panel-bg;
}

/* Right-align amount and total columns for proper decimal alignment */
DataTable > .datatable--cell-key-amount {
    text-align: right;
}

DataTable > .datatable--cell-key-total {
    text-align: right;
}

#action-bar {
    height: 1;
    background: $panel-bg;
    padding: 0 1;
    dock: bottom;
}

#action-hints {
    width: 1fr;
    color: $text-muted;
}

#pending-changes {
    width: auto;
    color: $warning;
    text-style: bold;
}

/* Footer */
Footer {
    background: $primary;
}

Footer > .footer--highlight {
    background: $accent;
}

Footer > .footer--key {
    background: $surface;
    color: $text;
}
