# watsonx.data MCP Server Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# watsonx.data API Configuration (REQUIRED)
# ============================================================================

# watsonx.data API base URL
# Example: https://console-ibm-ussouth.lakehouse.cloud.ibm.com/lakehouse/api
WATSONX_DATA_BASE_URL=https://your-instance.lakehouse.cloud.ibm.com/lakehouse/api

# IBM Cloud IAM API Key
# Get this from: https://cloud.ibm.com/iam/apikeys
WATSONX_DATA_API_KEY=your_ibm_cloud_api_key_here

# watsonx.data Instance ID (CRN)
# Example: crn:v1:bluemix:public:lakehouse:us-south:a/abc123:def456::
# Find this in your IBM Cloud dashboard under your watsonx.data instance
WATSONX_DATA_INSTANCE_ID=crn:v1:bluemix:public:lakehouse:region:a/account_id:instance_id::

# ============================================================================
# watsonx.data API Options (OPTIONAL)
# ============================================================================

# HTTP request timeout in seconds (default: 120)
# Range: 10-300 seconds
# WATSONX_DATA_TIMEOUT_SECONDS=120

# Skip TLS certificate verification (default: false)
# WARNING: Only use for development/testing. Never use in production!
# WATSONX_DATA_TLS_INSECURE_SKIP_VERIFY=false

# ============================================================================
# MCP Server Configuration (OPTIONAL)
# ============================================================================

# Deployment mode: local, self-hosted, or ibm-managed (default: local)
MODE=local

# Logging level: debug, info, warn, error, critical (default: info)
LOG_LEVEL=info

# ============================================================================
# OpenTelemetry Configuration (OPTIONAL)
# ============================================================================

# Enable console OpenTelemetry traces and metrics (default: false)
OTEL_ENABLED=false

# ============================================================================
# Notes
# ============================================================================
#
# 1. Never commit this file with real credentials
# 2. Keep your API key secure and rotate it regularly
# 3. The instance CRN can be found in IBM Cloud console
# 4. Use TLS_INSECURE_SKIP_VERIFY=true only for development
# 5. With AI Assistants, this file is not needed - configure via JSON instead
#
