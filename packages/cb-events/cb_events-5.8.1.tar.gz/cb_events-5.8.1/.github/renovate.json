{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate rules for cb-events dependency updates.",
  "extends": [
    "config:best-practices"
  ],
  "automergeType": "branch",
  "commitMessageLowerCase": "auto",
  "dependencyDashboard": true,
  "dependencyDashboardApproval": false,
  "dependencyDashboardAutoclose": true,
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "pep621",
    "pep723",
    "pre-commit"
  ],
  "ignorePaths": [
    "**/.pytest_cache/**",
    "**/__pycache__/**",
    "docs/_build/**",
    "htmlcov/**",
    "coverage.xml",
    "junit.xml"
  ],
  "internalChecksAsSuccess": false,
  "internalChecksFilter": "strict",
  "labels": [
    "dependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 5am on monday"
    ],
    "automerge": true
  },
  "minimumReleaseAge": "4 days",
  "platformAutomerge": false,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "rangeStrategy": "bump",
  "rebaseWhen": "auto",
  "schedule": [
    "at any time"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "timezone": "America/Edmonton",
  "packageRules": [
    {
      "description": "Major updates require manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false,
      "assignees": [
        "MountainGod2"
      ]
    },
    {
      "description": "Runtime dependencies (async HTTP and validation)",
      "matchPackageNames": [
        "aiohttp",
        "aiolimiter",
        "pydantic",
        "/^pydantic-.*$/"
      ],
      "groupName": "runtime",
      "labels": [
        "dependencies",
        "core"
      ],
      "minimumReleaseAge": "4 days",
      "semanticCommitScope": "runtime"
    },
    {
      "description": "Development tools (testing, linting, and type checking)",
      "matchPackageNames": [
        "pytest",
        "pytest-asyncio",
        "pytest-aiohttp",
        "pytest-cov",
        "pytest-mock",
        "aioresponses",
        "pyrefly",
        "pyright",
        "pylint",
        "bandit",
        "ruff",
        "/^pytest-.*$/",
        "/^pylint-.*$/",
        "/^bandit-.*$/",
        "ty",
        "bandit-sarif-formatter",
        "pylint-pydantic"
      ],
      "groupName": "dev",
      "labels": [
        "dependencies",
        "dev"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "0",
      "automerge": true,
      "autoApprove": true,
      "semanticCommitScope": "dev"
    },
    {
      "description": "Documentation tools (Sphinx and extensions)",
      "matchPackageNames": [
        "sphinx",
        "furo",
        "/^sphinx-.*$/"
      ],
      "groupName": "docs",
      "labels": [
        "dependencies",
        "docs"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "0",
      "automerge": true,
      "autoApprove": true,
      "semanticCommitScope": "docs"
    },
    {
      "description": "Build and release tools",
      "matchPackageNames": [
        "hatchling",
        "hatch-fancy-pypi-readme",
        "python-semantic-release",
        "/^hatch-.*$/"
      ],
      "groupName": "build",
      "labels": [
        "dependencies",
        "build"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "0",
      "automerge": true,
      "autoApprove": true,
      "semanticCommitScope": "build"
    },
    {
      "description": "Pre-commit hooks",
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "pre-commit-hooks",
      "labels": [
        "dependencies",
        "pre-commit"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "0",
      "automerge": true,
      "autoApprove": true,
      "semanticCommitScope": "pre-commit"
    },
    {
      "description": "GitHub Actions workflows",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "labels": [
        "dependencies",
        "ci"
      ],
      "minimumReleaseAge": "0",
      "automerge": true,
      "autoApprove": true,
      "semanticCommitScope": "ci"
    },
    {
      "description": "Dockerfile updates",
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "docker",
      "labels": [
        "dependencies",
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "minimumReleaseAge": "0",
      "automerge": true,
      "autoApprove": true,
      "semanticCommitScope": "docker"
    },
    {
      "description": "Example scripts managed via PEP 723",
      "matchManagers": [
        "pep723"
      ],
      "groupName": "examples",
      "labels": [
        "dependencies",
        "examples"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "minimumReleaseAge": "0",
      "automerge": true,
      "autoApprove": true,
      "semanticCommitScope": "examples"
    },
    {
      "description": "Keep Python version pinned",
      "matchManagers": [
        "pep621"
      ],
      "ignoreDeps": [
        "python"
      ]
    }
  ],
  "pep723": {
    "enabled": true,
    "managerFilePatterns": [
      "/^examples/.*\\.py$/"
    ]
  },
  "pre-commit": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "labels": [
      "security"
    ],
    "assignees": [
      "MountainGod2"
    ]
  }
}
