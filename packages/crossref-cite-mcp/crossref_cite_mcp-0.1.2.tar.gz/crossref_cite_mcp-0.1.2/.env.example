# Crossref API Configuration
# REQUIRED: Your email for Crossref polite pool (higher rate limits)
CROSSREF_MAILTO=your-email@example.com

# Optional: Custom User-Agent string
CROSSREF_USER_AGENT=crossref-cite-mcp/0.1

# Cache Configuration
# TTL in seconds (default: 14 days = 1209600)
CROSSREF_CACHE_TTL=1209600

# Cache backend: "memory" (default) or "json"
CROSSREF_CACHE_BACKEND=json

# Path for JSON cache file (default: ~/.crossref-cite/cache.json)
CROSSREF_CACHE_PATH=~/.crossref-cite/cache.json

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
