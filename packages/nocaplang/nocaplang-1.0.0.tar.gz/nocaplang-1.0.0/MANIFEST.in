# Include important documentation files
include README.md
include LICENSE

# Exclude internal guides
exclude PYPI_PUBLISHING_GUIDE.md
exclude PYPI_READY_TO_PUBLISH.md
exclude PYPI_VERIFICATION_CHECKLIST.md
exclude FINAL_PRE_PYPI_VALIDATION.md

# Include C++ stdlib header
include python/nocaplang/stdlib/nocaplang_stdlib.hpp

# Exclude documentation and examples (users can find them on the website)
prune docs
prune examples

# Exclude build artifacts and caches
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.dylib
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude test files from distribution
prune tests
prune python/tests

# Exclude build directories
prune build
prune dist
prune .hypothesis

# Exclude IDE and editor files
prune .vscode
prune .idea
global-exclude *.swp
global-exclude *~

# Exclude website files
prune nocaplang-website

# Exclude Java build files
prune java
exclude build.gradle
exclude settings.gradle

# Exclude CMake files
exclude CMakeLists.txt
