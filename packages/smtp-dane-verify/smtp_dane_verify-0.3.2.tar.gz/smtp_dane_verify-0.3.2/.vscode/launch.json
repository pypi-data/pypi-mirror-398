        {
            "name": "Python Debugger: sys4.de",
            "type": "debugpy",
            "request": "launch",
            "module": "smtp_dane_verify.cli",
            "args": [
                "-h", "mail.sys4.de",
                "--nameserver", "1.1.1.1",
