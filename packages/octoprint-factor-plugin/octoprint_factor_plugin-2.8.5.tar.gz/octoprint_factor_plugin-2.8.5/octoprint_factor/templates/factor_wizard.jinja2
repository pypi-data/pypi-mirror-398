<!-- FACTOR Plugin Setup Wizard -->
<div id="wizard_plugin_factor_mqtt" class="factor-wizard">
  <!-- Language Selector -->
  <div class="language-selector">
    <div class="btn-group" id="wizard-lang-selector">
      <button type="button" class="btn btn-mini" data-lang="en" title="English">EN</button>
      <button type="button" class="btn btn-mini" data-lang="ko" title="한국어">KO</button>
    </div>
  </div>

  <!-- Wizard Header -->
  <div class="wizard-header">
    <div class="wizard-logo">
      <img src="plugin/octoprint_factor/static/img/factor-app.png" alt="FACTOR" style="max-width: 200px; height: auto;" />
    </div>
    <h2 data-i18n="wizard.title">FACTOR Plugin</h2>
  </div>

  <!-- Main Content -->
  <div class="wizard-content">
    <p class="wizard-intro" data-i18n="wizard.intro">
      Access your full OctoPrint portal, printer controls, camera streams, and plugins from anywhere! FACTOR works on your desktop, laptop, tablet, phone, and your favorite OctoPrint apps!
    </p>

    <p class="wizard-tagline">
      <span data-i18n="wizard.tagline">FACTOR is <strong>free, secure, and super easy to setup!</strong></span>
    </p>

    <!-- Action Button -->
    <div class="wizard-actions">
      <a id="wizard-open-setup" href="https://factor.io.kr" target="_blank" class="btn btn-primary btn-large">
        <span data-i18n="wizard.button.setup">Visit FACTOR Website</span>
        <i class="icon-external-link"></i>
      </a>
    </div>

    <!-- Help Link -->
    <div class="wizard-help-link">
      <p data-i18n="wizard.help.instructions">
        Visit <a href="https://factor.io.kr" target="_blank">factor.io.kr</a> to register your device and complete setup.
      </p>
    </div>
  </div>
</div>
