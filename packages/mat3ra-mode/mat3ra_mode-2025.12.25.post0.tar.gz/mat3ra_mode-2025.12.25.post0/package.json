{
    "name": "@mat3ra/mode",
    "version": "0.0.0",
    "description": "MOdel and method DEfinitions",
    "scripts": {
        "test": "nyc --reporter=text mocha --recursive --bail",
        "pretest": "npm run transpile",
        "lint": "eslint --cache src/js tests/js && prettier --write src/js tests/js",
        "lint:fix": "eslint --fix --cache src/js tests/js && prettier --write src/js tests/js",
        "transpile": "tsc --project tsconfig.json",
        "prettier": "prettier --check src/js tests/js",
        "prepare": "husky install || exit 0",
        "prepublishOnly": "rm -rf dist && npm run transpile",
        "generate-mixins": "ts-node scripts/generate-mixins.ts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Exabyte-io/mode.git"
    },
    "main": "dist/js/index.js",
    "types": "dist/js/index.d.ts",
    "files": [
        "/dist",
        "/src/js",
        "tsconfig.json"
    ],
    "author": "Exabyte Inc.",
    "bugs": {
        "url": "https://github.com/Exabyte-io/mode/issues"
    },
    "license": "Apache-2.0",
    "homepage": "https://github.com/Exabyte-io/mode",
    "dependencies": {
        "@babel/cli": "7.16.0",
        "@babel/core": "7.16.0",
        "@babel/eslint-parser": "7.16.3",
        "@babel/plugin-proposal-class-properties": "7.16.0",
        "@babel/preset-env": "7.16.4",
        "@babel/preset-react": "7.16.7",
        "@babel/register": "^7.16.0",
        "@babel/runtime-corejs3": "7.16.8",
        "@types/lodash": "^4.14.202",
        "@types/underscore": "^1.11.14",
        "@types/node": "^20.11.30",
        "ajv": "^8.12.0",
        "js-yaml": "^4.1.0",
        "lodash": "^4.17.21",
        "mixwith": "^0.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.0",
        "underscore": "^1.13.3",
        "underscore.string": "^3.3.4"
    },
    "devDependencies": {
        "@exabyte-io/eslint-config": "2025.5.13-0",
        "@mat3ra/esse": "2025.10.8-0",
        "@mat3ra/standata": "2025.11.12-0",
        "@mat3ra/code": "2025.10.8-0",
        "@mat3ra/tsconfig": "2024.6.3-0",
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "chai": "^4.3.4",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^19.0.2",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-exports": "^1.0.0-beta.5",
        "eslint-import-resolver-meteor": "^0.4.0",
        "eslint-import-resolver-node": "^0.3.9",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsdoc": "^37.1.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-mui-path-imports": "0.0.15",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.2",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1"
    },
    "peerDependencies": {
        "@mat3ra/esse": "*",
        "@mat3ra/standata": "*",
        "@mat3ra/code": "*"
    },
    "engines": {
        "node": ">20.0.0"
    },
    "lint-staged": {
        "src/js/**/*.{js,ts}": [
            "eslint --cache --fix",
            "prettier --write"
        ],
        "tests/js/**/*.{js,ts}": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    }
