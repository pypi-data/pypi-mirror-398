# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include setup.py

# Include core policies
recursive-include core/policies *.yaml *.yml

# Include type stubs if any
recursive-include adapters/opentelemetry-python/clarvynn *.pyi py.typed

# Exclude development and build artifacts
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .pytest_cache
recursive-exclude * .mypy_cache
recursive-exclude * .coverage
recursive-exclude * htmlcov
recursive-exclude * dist
recursive-exclude * build
recursive-exclude * *.egg-info

# Exclude tests, examples, docs from distribution
recursive-exclude tests *
recursive-exclude examples *
recursive-exclude docs *

