<mujoco model="panda hand">
  <!-- hand.xml is in .../panda_hand/assets/, meshes in .../panda_hand/assets/assets/ -->
  <compiler angle="radian" meshdir="assets" autolimits="true"/>
  <option integrator="implicitfast"/>

  <default>
    <default class="panda">
      <material specular="0.5" shininess="0.25"/>
      <joint armature="0.1" damping="1" axis="0 0 1" range="-2.8973 2.8973"/>
      <general dyntype="none" biastype="affine" ctrlrange="-2.8973 2.8973" forcerange="-87 87"/>
    </default>
    <default class="finger">
      <joint axis="0 1 0" type="slide" range="0 0.04"/>
    </default>
  </default>

  <asset>
    <material class="panda" name="white"     rgba="1 1 1 1"/>
    <material class="panda" name="off_white" rgba="0.901961 0.921569 0.929412 1"/>
    <material class="panda" name="black"     rgba="0.25 0.25 0.25 1"/>

    <!-- Collision (STL) -->
    <mesh name="hand_c" file="hand.stl"/>

    <!-- Visuals (OBJ) -->
    <mesh name="hand_0"   file="hand_0.obj"/>
    <mesh name="hand_1"   file="hand_1.obj"/>
    <mesh name="hand_2"   file="hand_2.obj"/>
    <mesh name="hand_3"   file="hand_3.obj"/>
    <mesh name="hand_4"   file="hand_4.obj"/>
    <mesh name="finger_0" file="finger_0.obj"/>
    <mesh name="finger_1" file="finger_1.obj"/>
  </asset>

  <worldbody>
    <body name="hand" childclass="panda" quat="0 0 0 1">
      <inertial mass="0.73" pos="-0.01 0 0.03" diaginertia="0.001 0.0025 0.0017"/>

      <!-- Visuals: contype=0, conaffinity=0 -->
      <geom type="mesh" mesh="hand_0" material="off_white" contype="0" conaffinity="0" group="2"/>
      <geom type="mesh" mesh="hand_1" material="black"     contype="0" conaffinity="0" group="2"/>
      <geom type="mesh" mesh="hand_2" material="black"     contype="0" conaffinity="0" group="2"/>
      <geom type="mesh" mesh="hand_3" material="white"     contype="0" conaffinity="0" group="2"/>
      <geom type="mesh" mesh="hand_4" material="off_white" contype="0" conaffinity="0" group="2"/>

      <!-- Collision: contype=1, conaffinity=1 -->
      <geom type="mesh" mesh="hand_c" contype="1" conaffinity="1" group="3"/>

      <body name="left_finger" pos="0 0 0.0584">
        <inertial mass="0.015" pos="0 0 0" diaginertia="2.375e-6 2.375e-6 7.5e-7"/>
        <joint name="finger_joint1" class="finger"/>

        <!-- Visuals -->
        <geom type="mesh" mesh="finger_0" material="off_white" contype="0" conaffinity="0" group="2"/>
        <geom type="mesh" mesh="finger_1" material="black"     contype="0" conaffinity="0" group="2"/>

        <!-- Collision proxies at the tip -->
        <geom type="box" size="0.0085 0.004 0.0085" pos="0 0.0055 0.0445" contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.003"   pos="0.0055 0.002 0.05"  contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.003"   pos="-0.0055 0.002 0.05" contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.0035"  pos="0.0055 0.002 0.0395" contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.0035"  pos="-0.0055 0.002 0.0395" contype="1" conaffinity="1" group="3"/>
      </body>

      <body name="right_finger" pos="0 0 0.0584">
        <inertial mass="0.015" pos="0 0 0" diaginertia="2.375e-6 2.375e-6 7.5e-7"/>
        <joint name="finger_joint2" class="finger"/>

        <!-- Visuals -->
        <geom type="mesh" mesh="finger_0" material="off_white" contype="0" conaffinity="0" group="2"/>
        <geom type="mesh" mesh="finger_1" material="black"     contype="0" conaffinity="0" group="2"/>

        <!-- Collision proxies -->
        <geom type="box" size="0.0085 0.004 0.0085" pos="0 0.0055 0.0445" contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.003"   pos="0.0055 0.002 0.05"  contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.003"   pos="-0.0055 0.002 0.05" contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.0035"  pos="0.0055 0.002 0.0395" contype="1" conaffinity="1" group="3"/>
        <geom type="box" size="0.003 0.002 0.0035"  pos="-0.0055 0.002 0.0395" contype="1" conaffinity="1" group="3"/>
      </body>
    </body>
  </worldbody>

  <contact>
    <exclude body1="hand" body2="left_finger"/>
    <exclude body1="hand" body2="right_finger"/>
  </contact>

  <tendon>
    <fixed name="split">
      <joint joint="finger_joint1" coef="0.5"/>
      <joint joint="finger_joint2" coef="0.5"/>
    </fixed>
  </tendon>

  <equality>
    <joint joint1="finger_joint1" joint2="finger_joint2" solimp="0.95 0.99 0.001" solref="0.005 1"/>
  </equality>

  <actuator>
    <general class="panda" name="actuator8" tendon="split"
      forcerange="-100 100" ctrlrange="0 255"
      gainprm="0.01568627451 0 0" biasprm="0 -100 -10"/>
  </actuator>
</mujoco>
