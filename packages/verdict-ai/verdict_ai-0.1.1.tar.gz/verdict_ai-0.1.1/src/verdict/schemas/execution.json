{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Execution Plan Schema",
  "description": "Schema for Execution Agent output - a concrete implementation plan",
  "type": "object",
  "required": ["mvp_boundary", "phases", "success_metrics", "total_estimated_effort"],
  "properties": {
    "mvp_boundary": {
      "type": "string",
      "minLength": 30,
      "description": "Clear statement of what MVP includes and excludes"
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "description": "Implementation phases (maximum 5 for simplicity)",
      "items": {
        "type": "object",
        "required": ["name", "goal", "tasks", "done_criteria", "estimated_effort"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Phase name (e.g., 'Foundation', 'Core Features')"
          },
          "goal": {
            "type": "string",
            "description": "What this phase achieves"
          },
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string"},
            "description": "Specific, actionable tasks for this phase"
          },
          "done_criteria": {
            "type": "string",
            "description": "How you know this phase is complete"
          },
          "estimated_effort": {
            "type": "string",
            "description": "Realistic time estimate for this phase"
          }
        }
      }
    },
    "success_metrics": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"},
      "description": "Measurable indicators of success"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["risk", "mitigation"],
        "properties": {
          "risk": {
            "type": "string",
            "description": "Potential blocker or challenge"
          },
          "mitigation": {
            "type": "string",
            "description": "How to address or reduce this risk"
          }
        }
      },
      "description": "Potential risks and their mitigations"
    },
    "total_estimated_effort": {
      "type": "string",
      "description": "Overall timeline estimate (e.g., '2 weeks', '1 month')"
    },
    "dependencies": {
      "type": "array",
      "items": {"type": "string"},
      "description": "External dependencies required"
    }
  }
}
