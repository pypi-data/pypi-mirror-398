â”‚   â”œâ”€â”€ cli.py           # Command-line interface
â”‚   â”œâ”€â”€ config.py        # Configuration management
â”‚   â”œâ”€â”€ context.py       # User context management
â”‚   â”œâ”€â”€ pipeline.py      # Decision pipeline
â”‚   â”œâ”€â”€ storage.py       # File storage
â”‚   â””â”€â”€ validator.py     # JSON schema validation
â”œâ”€â”€ templates/           # Jinja2 templates
â”‚   â”œâ”€â”€ verdict_agent.j2     # Verdict agent prompt
