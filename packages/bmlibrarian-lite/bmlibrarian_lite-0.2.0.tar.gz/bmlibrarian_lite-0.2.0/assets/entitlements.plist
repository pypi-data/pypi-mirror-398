<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow network connections (required for PubMed API, Anthropic API, Ollama) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow read/write access to user-selected files (PDFs, documents) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow read access to Downloads folder (common PDF location) -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Hardened Runtime: Allow unsigned executable memory (required for Python) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Hardened Runtime: Allow DYLD environment variables (required for Python) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- Hardened Runtime: Disable library validation (required for bundled libraries) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
