# Bittensor network, eg. finney or ws://127.0.0.1:9944
PYLON_BITTENSOR_NETWORK=finney
# Directory in which the wallets are located (if using docker, it must point to the directory inside the container).
PYLON_BITTENSOR_WALLET_PATH=~/.bittensor/wallets

# Identities configuration. Here, names of configured identities are listed (json list).
PYLON_IDENTITIES=["sn12"]

# Configuration for identity named sn12.
# UID of bittensor subnet, eg. 12
PYLON_ID_SN12_NETUID=12
# Name of your wallet located inside BITTENSOR_WALLET_PATH, it will be used by this identity.
PYLON_ID_SN12_WALLET_NAME=my_wallet
# Name of the wallet hotkey that will be used by this identity.
PYLON_ID_SN12_HOTKEY_NAME=my_hotkey
# Token with which the user will authenticate to pylon to use this identity. Keep it secret.
PYLON_ID_SN12_TOKEN=my_secure_token

# Sentry Configuration
# DSN address for pylon to use - leave empty to disable sentry integration.
PYLON_SENTRY_DSN=
# Sentry environment to use.
PYLON_SENTRY_ENVIRONMENT=development

# Token for accessing /metrics endpoint. Must be passed as Bearer token in Authorization header.
# If empty, /metrics endpoint will return 403 Forbidden.
PYLON_METRICS_TOKEN=
