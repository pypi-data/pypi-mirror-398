set -e

run()
{
	local myself='' mydir='' funcdir=''
	myself="$(readlink -f -- "$0")"
	mydir="$(dirname -- "$myself")"
	funcdir="$(dirname -- "$mydir")"

	exec env PYTHONPATH="$funcdir${PYTHONPATH:+:$PYTHONPATH}" \
		python3 -B -u -m check_build_test "$@"
}

run "$@"
