<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Silenciar todos los logs excepto errores críticos -->
    <logger name="com.intuit.karate" level="ERROR" />
    <logger name="org.apache.http" level="ERROR" />
    <logger name="org.thymeleaf" level="OFF" />
    <logger name="org.apache.velocity" level="OFF" />
    <logger name="net.masterthought.cucumber" level="OFF" />
    <logger name="org.gradle" level="ERROR" />
    <logger name="org.junit" level="ERROR" />
    <logger name="ROOT" level="OFF" />
    
    <!-- Completamente silencioso excepto para errores -->
    <root level="OFF">
        <appender-ref ref="STDOUT" />
    </root>
    
    <!-- Appender para consola con formato mínimo -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>
    
</configuration>
