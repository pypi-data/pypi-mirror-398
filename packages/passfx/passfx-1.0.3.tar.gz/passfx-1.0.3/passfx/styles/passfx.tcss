}

#category-menu > .option-list--option-hover {
    background: #1a1a2e;
    color: #FFFFFF;
}

/* Settings Content Area */
#settings-content {
    width: 1fr;
    height: 100%;
    background: $operator-black;
    padding: 1 2;
    overflow-y: auto;
}

#content-pane {
    width: 100%;
    height: auto;
    background: $operator-black;
    padding: 0;
}

/* Panel Header */
.panel-header {
    width: 100%;
    height: auto;
    color: $operator-primary;
    text-style: bold;
    padding: 0 0 1 0;
    margin-bottom: 1;
    border-bottom: solid $operator-primary 30%;
}

/* Setting Section */
.setting-section {
    width: 100%;
    height: auto;
    background: transparent;
    padding: 1 0;
    margin-bottom: 1;
}

.setting-title {
    width: 100%;
    height: 1;
    color: $operator-primary;
    text-style: bold;
    padding: 0 0 0 1;
}

.setting-title-danger {
    width: 100%;
    height: 1;
    color: #ef4444;
    text-style: bold;
    padding: 0 0 0 1;
}

.setting-desc {
    width: 100%;
    height: auto;
    color: $operator-muted;
    padding: 0 0 1 1;
}

/* Setting Row - Input with unit label */
.setting-row {
    width: 100%;
    height: auto;
    align: left middle;
    padding: 0 0 0 1;
}

.setting-input {
    width: 20;
    height: 3;
    background: $operator-surface;
    border: solid $operator-muted 50%;
    color: $operator-text;
    margin-right: 1;
}

.setting-input:focus {
    border: solid $operator-primary;
    background: #0a0a12;
}

.setting-unit {
    width: auto;
    height: 1;
    color: $operator-muted;
    padding: 0 1;
}

/* Setting Row - Switch toggle */
.setting-row-switch {
    width: 100%;
    height: auto;
    align: left middle;
    padding: 0 0 0 1;
}

.switch-label {
    width: auto;
    height: auto;
    padding-left: 2;
}

/* Setting Row - Buttons */
.setting-row-button {
    width: 100%;
    height: auto;
    align: left middle;
    padding: 1 0 0 1;
}

/* Stats Grid */
.stats-grid {
    width: 100%;
    height: auto;
    background: transparent;
    padding: 0 0 0 1;
}

.stats-grid Static {
    height: 1;
    padding: 0;
}

/* Danger Zone Section */
.danger-section {
    width: 100%;
    height: auto;
    background: transparent;
    padding: 2 0 1 0;
    margin-top: 2;
    border-top: solid #ef4444 50%;
}

.danger-header {
    width: 100%;
    height: auto;
    text-align: center;
    padding: 1 0;
}

/* Status Message */
.status-message {
    width: 100%;
    height: 1;
    padding: 1 0 0 1;
}

/* Settings Footer */
#settings-footer {
    width: 100%;
    height: 3;
    dock: bottom;
    background: $operator-black;
    border-top: heavy $operator-primary;
    align: center middle;
    padding: 0;
    margin: 0;
}

#settings-footer-label {
    width: 28;
    height: 3;
    background: $operator-black;
    color: $operator-muted;
    content-align: center middle;
}

/* Keycap styling within settings footer */
#settings-footer .keycap-group {
    width: auto;
    height: 3;
    margin-right: 2;
    align: center middle;
}

#settings-footer .keycap {
    width: auto;
    height: auto;
    min-width: 5;
    background: $operator-surface;
    color: $operator-primary;
    text-style: bold;
    padding: 0 1;
}

#settings-footer .keycap-label {
    width: auto;
    height: auto;
    background: transparent;
    margin-left: 1;
    color: $operator-muted;
