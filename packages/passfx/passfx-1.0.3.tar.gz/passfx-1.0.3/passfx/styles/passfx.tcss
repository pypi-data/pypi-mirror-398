/* PassFX - Modern Cyberpunk Theme */
/* A visually stunning terminal UI */

/* ═══════════════════════════════════════════════════════════════════════════
   COLOR PALETTE - Using pfx- prefix to avoid Textual theme conflicts
   ═══════════════════════════════════════════════════════════════════════════ */

$pfx-primary: #3b82f6;
$pfx-primary-dim: #1d4ed8;
$pfx-primary-light: #60a5fa;
$pfx-accent: #8b5cf6;
$pfx-accent-dim: #6d28d9;
$pfx-success: #22c55e;
$pfx-warning: #f59e0b;
$pfx-error: #ef4444;
$pfx-bg: #0f172a;
$pfx-surface: #1e293b;
$pfx-surface-light: #334155;
$pfx-surface-lighter: #475569;
$pfx-fg: #f8fafc;
$pfx-muted: #94a3b8;

/* Night City Theme Tokens */
$neon-cyan: #00FFFF;
$deep-black: #050505;
$terminal-dim: #444444;
$surface-black: #0a0a0a;

/* Operator Theme Tokens - Pure black cyberpunk aesthetic */
$operator-black: #000000;
$operator-primary: #00FFFF;
$operator-secondary: #8b5cf6;
$operator-pink: #ec4899;
$operator-surface: #0a0a0a;
$operator-text: #e0e0e0;
$operator-muted: #666666;

/* Strict Palette - Enforced across the application
   Primary: Cyan (#00FFFF) - Primary actions, active focus, core highlights
   Secondary: Purple (#8b5cf6) - System info, headers, terminal accents
   Success: Green (#22c55e) - Secure states, healthy indicators
*/

/* ═══════════════════════════════════════════════════════════════════════════
   GLOBAL STYLES
   ═══════════════════════════════════════════════════════════════════════════ */

Screen {
    background: #0f172a;
    color: $pfx-fg;
}

/* Main Menu uses pure black Operator theme */
MainMenuScreen {
    background: $operator-black;
}

/* ═══════════════════════════════════════════════════════════════════════════
   CUSTOM HEADER - SYSTEM STATUS BAR
   ═══════════════════════════════════════════════════════════════════════════ */

/* COMMAND BAR - Operator Theme Header with ASCII Logo */
#app-header {
    width: 100%;
    height: 4;
    dock: top;
    background: $operator-black;
    border-bottom: heavy $operator-primary;
    align: left middle;
}

#header-branding {
    width: 30;
    height: 4;
    background: $operator-black;
    color: $operator-primary;
    content-align: left middle;
    padding: 1 2;
}

#header-right {
    width: 30;
    height: 4;
    background: $operator-black;
    align: right middle;
    padding: 0 2;
}

#header-clock {
    width: auto;
    height: auto;
    color: $operator-primary;
    text-style: bold;
    content-align: right middle;
    background: $operator-black;
}

#header-lock {
    width: auto;
    height: auto;
    color: $pfx-success;
    text-style: bold;
    content-align: right middle;
    background: $operator-black;
}

/* ═══════════════════════════════════════════════════════════════════════════
   AUTO-LOCK COUNTDOWN WARNING
   ═══════════════════════════════════════════════════════════════════════════ */

#header-countdown {
    width: 1fr;
    height: 4;
    content-align: center middle;
    background: $operator-black;
    text-style: bold;
    text-opacity: 0%;
}

#header-countdown.countdown-active {
    text-opacity: 100%;
}

#header-countdown.countdown-active.countdown-pulse {
    text-opacity: 60%;
}

/* ═══════════════════════════════════════════════════════════════════════════
   FOOTER - COMMAND STRIP
   ═══════════════════════════════════════════════════════════════════════════ */

Footer {
    background: #0f172a;
    color: #94a3b8;
    height: auto;
    dock: bottom;
    padding: 0;
}

FooterKey {
    background: transparent;
    color: #94a3b8;
    padding: 0 1;
}

FooterKey > .footer-key--key {
    background: transparent;
    color: #8b5cf6;
    text-style: bold;
}

FooterKey > .footer-key--description {
    color: #64748b;
}

/* ═══════════════════════════════════════════════════════════════════════════
   CUSTOM FOOTER - Operator Theme Command Strip
   ═══════════════════════════════════════════════════════════════════════════ */

#app-footer {
    width: 100%;
    height: 3;
    dock: bottom;
    background: $operator-black;
    border-top: heavy $operator-primary;
    align: center middle;
    padding: 0;
    margin: 0;
}

#footer-version {
    width: 28;
    height: 3;
    background: $operator-black;
    color: $operator-muted;
    content-align: center middle;
}

#footer-keys {
    width: 1fr;
    height: 3;
    background: $operator-black;
    align: left middle;
    padding-left: 2;
}

/* Mechanical Keycap Styling - Operator Theme */
.keycap-group {
    width: auto;
    height: auto;
    margin-right: 2;
}

.keycap {
    width: auto;
    height: auto;
    min-width: 5;
    background: $operator-surface;
    color: $operator-primary;
    text-style: bold;
    padding: 0 1;
}

.keycap-label {
    width: auto;
    height: auto;
    background: transparent;
    margin-left: 1;
    color: $operator-muted;
}

/* ═══════════════════════════════════════════════════════════════════════════
   LOGIN SCREEN - NIGHT CITY THEME
   ═══════════════════════════════════════════════════════════════════════════ */

/* Screen-level background */
LoginScreen {
    background: $deep-black;
}

/* Matrix Rain Container - vertical layout with top strip */
#matrix-bg {
    width: 100%;
    height: 100%;
    background: $deep-black;
}

/* Top/bottom rain strips - equal flex to center the card */
.matrix-strip-top,
.matrix-strip-bottom {
    width: 100%;
    height: 1fr;
    background: #050505;
}

/* Middle section - horizontal with side strips */
#matrix-middle {
    width: 100%;
    height: auto;
    background: #050505;
}

/* Side rain strips - expand to fill remaining space */
.matrix-strip-left,
.matrix-strip-right {
    width: 1fr;
    height: 100%;
    background: #050505;
}

/* Main content area - fixed width for login card, centered */
#login-form-pane {
    width: auto;
    height: auto;
    background: #050505;
    align: center middle;
    padding: 0;
    margin: 0;
}

/* The Deck Container - neon cyan border */
#login-deck {
    width: 60;
    height: auto;
    border: heavy $neon-cyan;
    padding: 1 2;
    background: $surface-black;
}

/* Brand Logo (ASCII art via Rich markup) */
#brand-logo {
    text-align: center;
    width: 100%;
    margin-bottom: 0;
}

/* Brand Subtitle */
#brand-subtitle {
    color: $neon-cyan;
    text-align: center;
    margin-bottom: 2;
}

/* Input Label */
.input-label {
    color: $neon-cyan;
    text-style: bold;
    margin-bottom: 1;
}

/* Password Input */
#login-deck #password-input,
#login-deck #confirm-input {
    border: tall $neon-cyan;
    background: $surface-black;
    color: white;
    width: 100%;
    margin-bottom: 2;
}

#login-deck #password-input:focus,
#login-deck #confirm-input:focus {
    border: tall #FFFFFF;
}

#login-deck #password-input.-invalid,
#login-deck #confirm-input.-invalid {
    border: tall $pfx-error;
}

/* Login/Create Buttons - Night City Theme */
#unlock-button, #create-button {
    background: $neon-cyan;
    color: #000000;
    text-style: bold;
    border: none;
    width: 100%;
    min-height: 3;
}

#unlock-button:hover, #create-button:hover {
    background: #FFFFFF;
}

#unlock-button:focus, #create-button:focus {
    background: #FFFFFF;
}

/* Status Footer */
#status-footer {
    color: $terminal-dim;
    text-align: center;
    margin-top: 2;
}

/* Error Message */
#login-deck #error-message {
    color: #ef4444;
    text-align: center;
    text-style: bold;
    margin-top: 1;
}

/* ═══════════════════════════════════════════════════════════════════════════
   MAIN MENU - COMMAND CENTER
   ═══════════════════════════════════════════════════════════════════════════ */

#main-container {
    width: 100%;
    height: 100%;
    align: left top;
}

/* SECTOR GRID - Navigation Sidebar Operator Theme */
#sidebar {
    width: 28;
    height: 100%;
    background: $operator-black;
    padding: 1 1 0 1;
    border: solid $operator-primary 30%;
    border-title-align: center;
    border-title-color: $operator-primary;
    border-title-style: bold;
}

#sidebar-menu {
    background: transparent;
    border: none;
    height: auto;
    padding: 0;
    margin: 0;
}

#sidebar-menu:focus {
    border: none;
}

/* Navigation items - default state */
#sidebar-menu > .option-list--option {
    padding-left: 2;
    color: $operator-text;
}

/* Active/Highlighted state with left border glow */
#sidebar-menu > .option-list--option-highlighted {
    background: #0a2a2a;
    color: #00FFFF;
    text-style: bold;
    border-left: heavy #00FFFF;
    padding-left: 1;
}

/* Hover state */
#sidebar-menu > .option-list--option-hover {
    background: #1a1a2e;
    color: #FFFFFF;
}

/* Dashboard View - Operator Theme */
#dashboard-view {
    width: 1fr;
    height: 100%;
    background: $operator-black;
    padding: 0 2 1 2;
    scrollbar-gutter: stable;
}

#dashboard-view:focus {
    border: none;
}

#dashboard-title {
    text-align: center;
    padding: 0;
    margin: 0;
    height: auto;
    color: $operator-primary;
    display: none;
}

/* Stats HUD Strip - Operator Theme */
#stats-strip,
#stats-strip-2 {
    width: 100%;
    height: 2fr;
    max-height: 10;
    background: $operator-black;
    border: solid $operator-primary 50%;
    padding: 0;
}

#stats-strip {
    margin: 0;
}

#stats-strip-2 {
    margin: 0 0 1 0;
    border-top: none;
}

/* Stat Segment - Operator Theme */
.stat-segment {
    width: 1fr;
    min-width: 12;
    height: 100%;
    align: center middle;
    padding: 0 1;
    border-right: solid $operator-primary 30%;
    background: transparent;
}

.stat-segment:hover {
    background: $operator-surface;
}

.stat-segment:last-child {
    border-right: none;
}

.stat-label {
    color: $operator-muted;
    text-style: bold;
    text-align: center;
    height: 1;
    padding: 0;
    background: transparent;
}

/* Digits - Flexible height for responsiveness */
.stat-value {
    height: 1fr;
    text-align: center;
    background: transparent;
}

/* Digit colors match each screen's accent color */
#digits-passwords {
    color: #8b5cf6;  /* Purple - matches PasswordsScreen */
}

#digits-phones {
    color: #ec4899;  /* Pink - matches PhonesScreen */
}

#digits-cards {
    color: #22c55e;  /* Green - matches CardsScreen */
}

#digits-notes {
    color: #fde047;  /* Amber - matches NotesScreen */
}

#digits-envs {
    color: #818cf8;  /* Indigo - matches EnvsScreen */
}

#digits-recovery {
    color: #ff6f6f;  /* Salmon - matches RecoveryScreen */
}

/* Panels Row - Responsive Side-by-Side Layout */
#panels-row {
    width: auto;
    height: 3fr;
    min-height: 8;
    align: left top;
    overflow: hidden;
}

/* HUD CARDS - Operator Theme Panels */
.hud-card {
    background: $operator-black;
    border: solid $operator-primary;
    border-title-align: center;
    border-title-color: $operator-primary;
    border-title-style: bold;
    border-title-background: $operator-black;
    padding: 1;
    margin: 1;
}

.hud-card:focus {
    border: solid $operator-secondary;
}

/* CRT-style dashboard panels - Operator Theme */
.gauge-panel {
    width: 1fr;
    height: 100%;
    background: $operator-black;
    border: solid $operator-primary;
    border-title-align: center;
    border-title-color: $operator-primary;
    border-title-style: bold;
    border-title-background: $operator-black;
    padding: 1 2;
    margin: 1 1 1 0;
    text-align: center;
}

.log-panel {
    width: 1fr;
    height: 100%;
    background: $operator-black;
    border: solid $operator-secondary;
    border-title-align: center;
    border-title-color: $operator-secondary;
    border-title-style: bold;
    border-title-background: $operator-black;
    padding: 1 2;
    margin: 1 0 1 1;
    text-align: left;
    overflow: hidden;
}

/* High contrast text inside CRT panels */
.gauge-panel Static,
.log-panel Static {
    color: $pfx-fg;
}

/* Security gauge widget - black background to match panel */
#security-gauge {
    background: #000000;
}

.title {
    color: #60a5fa;
    text-style: bold;
    text-align: center;
    padding: 1 0;
}

.subtitle {
    color: #94a3b8;
    text-align: center;
    text-style: italic;
    padding: 0 0 2 0;
}

/* ═══════════════════════════════════════════════════════════════════════════
   OPTION LIST - THE STAR OF THE SHOW
   ═══════════════════════════════════════════════════════════════════════════ */

OptionList {
    background: #1e293b;
    color: #f8fafc;
    border: round #3b82f6;
    padding: 1 2;
    margin: 1 0;
    height: auto;
    max-height: 20;
}

OptionList:focus {
    border: round #60a5fa;
}

OptionList > .option-list--option {
    color: #f8fafc;
}

OptionList > .option-list--option-highlighted {
    background: #3b82f6;
    color: #0f172a;
    text-style: bold;
}

OptionList > .option-list--option-hover {
    background: #334155;
    color: #f8fafc;
}

OptionList > .option-list--option-disabled {
    color: #64748b;
}

/* ═══════════════════════════════════════════════════════════════════════════
   DATA TABLE
   ═══════════════════════════════════════════════════════════════════════════ */

DataTable {
    background: #1e293b;
    color: #f8fafc;
    border: round #1d4ed8;
    padding: 0;
    margin: 1 0;
    height: auto;
}

DataTable:focus {
    border: round #3b82f6;
}

DataTable > .datatable--header {
    background: #334155;
    color: #60a5fa;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: #3b82f6;
    color: #0f172a;
    text-style: bold;
}

DataTable > .datatable--even-row {
    background: #1e293b;
    color: #f8fafc;
}

DataTable > .datatable--odd-row {
    background: #334155;
    color: #f8fafc;
}

/* ═══════════════════════════════════════════════════════════════════════════
   INPUT FIELDS
   ═══════════════════════════════════════════════════════════════════════════ */

Input {
    background: #334155;
    color: #f8fafc;
    border: tall #475569;
    margin: 0 0 1 0;
}

Input:focus {
    border: tall #3b82f6;
}

Input.-invalid {
    border: tall #ef4444;
}

/* ═══════════════════════════════════════════════════════════════════════════
   BUTTONS
   ═══════════════════════════════════════════════════════════════════════════ */

Button {
    background: #334155;
    color: #60a5fa;
    border: solid #1d4ed8;
    text-style: bold;
    min-width: 10;
    width: auto;
    height: auto;
    padding: 1 3;
    margin: 0 1;
}

Button:hover {
    background: #1d4ed8;
    color: #f8fafc;
    border: solid #3b82f6;
}

Button:focus {
    background: #3b82f6;
    color: #0f172a;
    border: solid #3b82f6;
    text-style: bold;
}

Button.-primary {
    background: #3b82f6;
    color: #0f172a;
    border: solid #3b82f6;
}

Button.-primary:hover {
    background: #8b5cf6;
    border: solid #8b5cf6;
}

Button.-error {
    background: #ef4444;
    color: #f8fafc;
    border: solid #ef4444;
}

Button.-error:hover {
    background: #8b5cf6;
}

/* ═══════════════════════════════════════════════════════════════════════════
   LABELS & TEXT
   ═══════════════════════════════════════════════════════════════════════════ */

Label {
    padding: 1 0 0 0;
    color: #94a3b8;
}

Static {
    padding: 0;
    color: $pfx-fg;
}

.info {
    color: #3b82f6;
}

.warning {
    color: #f59e0b;
}

.error {
    color: #ef4444;
}

.success {
    color: #22c55e;
}

.muted {
    color: #94a3b8;
}

/* ═══════════════════════════════════════════════════════════════════════════
   CONTAINERS & LAYOUT
   ═══════════════════════════════════════════════════════════════════════════ */

Horizontal {
    height: auto;
    align: center middle;
}

Vertical {
    height: auto;
}

Center {
    align: center middle;
}

.box {
    background: #1e293b;
    color: #f8fafc;
    border: round #1d4ed8;
    padding: 1 2;
    margin: 1 0;
}

/* ═══════════════════════════════════════════════════════════════════════════
   ACTION BAR
   ═══════════════════════════════════════════════════════════════════════════ */

#action-bar {
    dock: bottom;
    height: auto;
    min-height: 5;
    background: #1e293b;
    border-top: solid #475569;
    padding: 1 2;
    align: center middle;
}

#action-bar Button {
    margin: 0 1;
}

/* ═══════════════════════════════════════════════════════════════════════════
   PASSWORD STRENGTH
   ═══════════════════════════════════════════════════════════════════════════ */

#strength-bar {
    height: 1;
    margin: 1 0;
}

.strength-weak { color: #ef4444; }
.strength-fair { color: #f59e0b; }
.strength-good { color: #22c55e; }
.strength-strong { color: #3b82f6; }

/* ═══════════════════════════════════════════════════════════════════════════
   MODAL SCREENS
   ═══════════════════════════════════════════════════════════════════════════ */

ModalScreen {
    align: center middle;
    background: rgba(0, 0, 0, 0.8);
}

#modal-container {
    width: 70;
    height: auto;
    background: #1e293b;
    color: #f8fafc;
    border: double #3b82f6;
    padding: 2 3;
}

#modal-title {
    text-style: bold;
    color: #60a5fa;
    text-align: center;
    padding: 0 0 1 0;
    border-bottom: solid #475569;
    margin-bottom: 1;
}

#modal-content {
    padding: 1 0;
    color: #f8fafc;
}

#modal-buttons {
    padding: 2 0 0 0;
    align: center middle;
}

/* ═══════════════════════════════════════════════════════════════════════════
   GENERATOR SCREEN
   ═══════════════════════════════════════════════════════════════════════════ */

#password-options, #passphrase-options, #pin-options {
    background: #1e293b;
    color: #f8fafc;
    border: round #475569;
    padding: 1 2;
    margin: 1 0;
}

#result-display {
    background: #334155;
    color: #22c55e;
    border: double #22c55e;
    padding: 2;
    margin: 2 0;
    text-align: center;
    min-height: 3;
}

#strength-display {
    text-align: center;
    color: #94a3b8;
    padding: 1 0;
}

#generate-button {
    width: 100%;
    margin: 1 0;
}

/* ═══════════════════════════════════════════════════════════════════════════
   CHECKBOX
   ═══════════════════════════════════════════════════════════════════════════ */

Checkbox {
    background: transparent;
    color: #f8fafc;
    padding: 1 0;
}

Checkbox:focus {
    background: #334155;
}

Checkbox > .toggle--button {
    background: #475569;
}

Checkbox.-on > .toggle--button {
    background: #3b82f6;
}

/* ═══════════════════════════════════════════════════════════════════════════
   SCROLLBARS
   ═══════════════════════════════════════════════════════════════════════════ */

Scrollbar {
    background: #1e293b;
}

ScrollBar > .scrollbar--bar {
    background: #1d4ed8;
}

ScrollBar > .scrollbar--bar:hover {
    background: #3b82f6;
}

/* Dashboard scrollbar - subtle cyberpunk accent */
#dashboard-view Scrollbar {
    background: #0f172a;
}

#dashboard-view ScrollBar > .scrollbar--bar {
    background: #334155;
}

#dashboard-view ScrollBar > .scrollbar--bar:hover {
    background: #60a5fa;
}

/* ═══════════════════════════════════════════════════════════════════════════
   STATS DISPLAY
   ═══════════════════════════════════════════════════════════════════════════ */

#stats-display {
    background: #1e293b;
    color: #f8fafc;
    border: round #1d4ed8;
    padding: 2;
    margin: 2 0;
}

/* ═══════════════════════════════════════════════════════════════════════════
   TOAST NOTIFICATIONS - System Panel Style
   Matches PassFX mechanical aesthetic: pure black, heavy borders, sharp edges
   ═══════════════════════════════════════════════════════════════════════════ */

/* Toast Container - positions toast stack */
ToastRack {
    margin-bottom: 2;
    margin-right: 1;
}

/* Base Toast - Mini System Panel */
Toast {
    width: 48;
    max-width: 60%;
    background: $operator-black;
    color: $operator-text;
    border: heavy $neon-cyan;
    padding: 1 2;
    margin-top: 1;
}

/* Title styling - variant color, bold */
Toast .toast--title {
    text-style: bold;
    color: $neon-cyan;
}

/* INFO / Default - Cyan (primary system feedback) */
Toast.-information {
    border: heavy $neon-cyan;
}

Toast.-information .toast--title {
    color: $neon-cyan;
}

/* SUCCESS - Green (positive confirmation) */
Toast.-success {
    border: heavy $pfx-success;
}

Toast.-success .toast--title {
    color: $pfx-success;
}

/* WARNING - Amber (caution) */
Toast.-warning {
    border: heavy $pfx-warning;
}

Toast.-warning .toast--title {
    color: $pfx-warning;
}

/* ERROR - Red (failure) */
Toast.-error {
    border: heavy $pfx-error;
}

Toast.-error .toast--title {
    color: $pfx-error;
}

/* ═══════════════════════════════════════════════════════════════════════════
   COMMAND PALETTE - NETRUNNER THEME
   Purple accent for System/Command distinction (Blue = Data, Purple = System)
   ═══════════════════════════════════════════════════════════════════════════ */

/* Story 1: Container - single unified box */
CommandPalette {
    background: $pfx-bg;
    border: heavy $pfx-accent;
    width: 60%;
    height: auto;
    padding: 0;
    margin: 0;
}

/* Story 2: Input field acts as top row with divider */
CommandPalette > Input,
CommandPalette > CommandInput {
    background: transparent;
    border: none;
    border-bottom: heavy $pfx-accent;
    padding: 1 2;
