    background: $operator-black;
    border-bottom: heavy $operator-primary;
    align: left middle;
    padding: 0 2;
}

#settings-header-title {
    width: auto;
    height: auto;
    color: $operator-primary;
    text-style: bold;
}

#settings-header-subtitle {
