{
    "id": "https://www.xshl.org/schemas/1/boom/message.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for an boom message",
    "type": "object",
    "required": ["@context", "body", "created", "sender", "subscribe", "token"],
    "properties": {
        "@context": {
            "description": "The source context",
            "type": "string"
        },
        "body": {
            "description": "The body content",
            "type": "object"
        },
        "created": {
            "description": "Time created",
            "oneOf": [
                    {"type": "number"},
                    {
                        "description": "MongoDB date fields",
                        "type": "object",
                        "required": ["$data"],
                        "properties": {
                            "$data": {"type": "integer"}
                        },
                        "additionalProperties": false
                    }
                ]

        },
        "sender": {
            "description": "Sender",
            "type": "object",
            "required": ["host"],
            "properties": {
                "host": {
                    "description": "Host of page",
                    "type": "string"
                },
                "ip": {
                    "description": "User IP",
                    "type": "string"
                },
                "uid": {
                    "description": "User UID",
                    "type": "string"
                },
                "ua": {
                    "description": "User Agent",
                    "type": "string"
                },
                "referer": {
                    "description": "The HTTP referer is an HTTP header field that identifies",
                    "type": "string"
                },
                "version": {
                    "description": "Sender version",
                    "type": "string"
                },
                "pid": {
                    "description": "Sender Process ID",
                    "type": "integer"
                },
                "time": {
                    "description": "Init Process Time",
                    "type": "number"
                }
            },
            "additionalProperties": true
        },
        "subscribe": {
            "description": "Subscribe URI",
            "type": "string"
        },
        "channel": {
            "description": "Target channel URI",
            "type": "string"
        },
        "token": {
            "description": "User token",
            "type": "string"
        },
        "errors": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false
}