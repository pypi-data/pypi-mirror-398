# Copy to .env and fill values as needed.

# Codecov upload token (required for private repos; optional for public repos)
CODECOV_TOKEN=

# PyPI API token for release workflow (.github/workflows/release.yml)
# Format: pypi-AgENdGVzdC5weXBpLm9yZwIk...
PYPI_API_TOKEN=

# Optional: GitHub token for API-limited tasks
GITHUB_TOKEN=

# Email configuration (for sending notifications)
# SMTP host in format "host:port" - can be comma-separated for multiple hosts
# BITRANOX_TEMPLATE_CLI_APP_CONFIG_LOG_MAIL_EMAIL_SMTP_HOSTS=smtp.gmail.com:587,smtp.backup.com:587

# Default sender address for outgoing emails
# BITRANOX_TEMPLATE_CLI_APP_CONFIG_LOG_MAIL_EMAIL_FROM_ADDRESS=noreply@example.com

# SMTP authentication credentials (optional, both needed for auth)
# BITRANOX_TEMPLATE_CLI_APP_CONFIG_LOG_MAIL_EMAIL_SMTP_USERNAME=your-email@example.com
# BITRANOX_TEMPLATE_CLI_APP_CONFIG_LOG_MAIL_EMAIL_SMTP_PASSWORD=your-app-password

# SMTP connection settings
# BITRANOX_TEMPLATE_CLI_APP_CONFIG_LOG_MAIL_EMAIL_USE_STARTTLS=true
# BITRANOX_TEMPLATE_CLI_APP_CONFIG_LOG_MAIL_EMAIL_TIMEOUT=30.0

# Test SMTP server (for local testing)
TEST_SMTP_SERVER=
TEST_EMAIL_ADDRESS=
