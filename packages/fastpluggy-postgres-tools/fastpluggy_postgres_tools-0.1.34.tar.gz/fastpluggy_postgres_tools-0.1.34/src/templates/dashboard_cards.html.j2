{#
  PostgreSQL Tools - Dashboard Cards Grid
  Context (prefixed by widget):
    - widget.title: string
    - widget.cards: list of { title, icon, description, url }
#}
<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title mb-0">
      <i class="fas fa-toolbox me-2"></i>{{ widget.title or 'PostgreSQL Tools' }}
    </h5>
  </div>
</div>

<div class="row g-3">
  {% for c in widget.cards %}
  <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
    <a href="{{ c.url }}" class="text-decoration-none text-reset">
      <div class="card h-100 shadow-sm border-0 card-hover">
        <div class="card-body d-flex flex-column">
          <div class="d-flex align-items-center mb-2">
            {% if c.icon %}
              <i class="{{ c.icon }} text-primary me-2" style="font-size: 1.25rem;"></i>
            {% else %}
              <i class="fas fa-circle text-primary me-2" style="font-size: 1.25rem;"></i>
            {% endif %}
            <h6 class="card-title mb-0">{{ c.title }}</h6>
          </div>
          {% if c.description %}
            <p class="card-text text-muted small flex-grow-1">{{ c.description }}</p>
          {% endif %}
          <div class="mt-2 d-flex align-items-center text-primary small fw-semibold">
            <span>Open</span>
            <i class="fas fa-arrow-right ms-2"></i>
          </div>
        </div>
      </div>
    </a>
  </div>
  {% endfor %}
</div>

<style>
.card-hover { transition: transform .12s ease, box-shadow .12s ease; }
.card-hover:hover { transform: translateY(-2px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.08) !important; }
</style>
