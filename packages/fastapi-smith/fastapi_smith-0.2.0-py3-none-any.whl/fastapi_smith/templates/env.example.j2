# Application
APP_NAME={{ config.project_name }}
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Server
HOST=0.0.0.0
PORT=8000

{% if config.database == config.database.POSTGRESQL %}
# Database (PostgreSQL)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/{{ config.project_name | replace('-', '_') }}
{% elif config.database == config.database.MYSQL %}
# Database (MySQL)
DATABASE_URL=mysql+asyncmy://root:root@localhost:3306/{{ config.project_name | replace('-', '_') }}
{% elif config.database == config.database.SQLITE %}
# Database (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./{{ config.project_name | replace('-', '_') }}.db
{% endif %}

{% if config.auth_method == config.auth_method.JWT %}
# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
{% elif config.auth_method == config.auth_method.OAUTH2 %}
# OAuth2
OAUTH2_CLIENT_ID=your-client-id
OAUTH2_CLIENT_SECRET=your-client-secret
{% endif %}

{% if config.cache_backend == config.cache_backend.REDIS %}
# Redis
REDIS_URL=redis://localhost:6379/0
{% elif config.cache_backend == config.cache_backend.MEMCACHED %}
# Memcached
MEMCACHED_HOST=localhost
MEMCACHED_PORT=11211
{% endif %}

{% if config.message_broker == config.message_broker.RABBITMQ %}
# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
{% elif config.message_broker == config.message_broker.REDIS and config.task_queue != config.task_queue.NONE %}
# Redis (for message broker)
REDIS_URL=redis://localhost:6379/0
{% endif %}

{% if config.sentry_enabled %}
# Sentry
SENTRY_DSN=your-sentry-dsn
{% endif %}

{% if config.aws_enabled %}
# AWS
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
{% if 's3' in config.aws_services | map(attribute='value') | list %}
AWS_S3_BUCKET=your-bucket-name
{% endif %}
{% if 'ses' in config.aws_services | map(attribute='value') | list %}
AWS_SES_SENDER_EMAIL=noreply@yourdomain.com
{% endif %}
{% endif %}

{% if config.cors_enabled %}
# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
{% endif %}
