{%- set embedded = embedded | default(False) -%}
{%- set place_context = resource.entity_contexts['place'] -%}
<div class="small">
    {%- if entity.place_type.plugin().id != 'unknown' -%}
        <p class="m-0">{{ entity.place_type.plugin().label | localize | html_lang }}</p>
    {%- endif -%}
    {%- set encloser_enclosure = entity.enclosers | negotiate_has_dates(date_context | default(none)) -%}
    {%- if encloser_enclosure -%}
        {%- set encloser_label -%}
            {%- with place = encloser_enclosure.encloser -%}
                {% include 'entity/place-enclosure-label.html.j2' %}
            {%- endwith -%}
        {%- endset -%}
        {%- if encloser_label -%}
            {%- trans place = encloser_label | html_lang -%}
                in {{ place }}
            {%- endtrans -%}
        {%- endif -%}
    {%- endif -%}
</div>
