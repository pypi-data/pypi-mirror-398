{% set notes = resource.resource.notes | select('public') | list %}
{% if notes | length %}
    <div class="container my-5">
        <div class="row">
            <div class="col col-12 col-lg-8">
                <section id="notes" class="section">
                    <h2 class="section-heading">
                        {% trans %}Notes{% endtrans %}
                        {% with url = "#notes" %}
                            {% include 'component/permalink.html.j2' %}
                        {% endwith %}
                    </h2>
                    {% for note in notes %}
                        {% include 'note.html.j2' %}
                    {% endfor %}
                </section>
            </div>
        </div>
    </div>
{% endif %}
