{
    "name": "atsds-bnf",
    "description": "BNF parser and unparsers for DS - conversion between lisp-like and traditional syntax",
    "author": "Hao Zhang <hzhangxyz@outlook.com>",
    "license": "AGPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/USTC-KnowledgeComputingLab/ds.git",
        "directory": "bnf"
    },
    "type": "module",
    "exports": "./dist/index.mjs",
    "main": "dist/index.mjs",
    "module": "dist/index.mjs",
    "browser": "dist/index.mjs",
    "types": "dist/index.d.mts",
    "files": [
        "dist/index.d.mts",
        "dist/index.mjs"
    ],
    "scripts": {
        "ds": "antlr4 -Dlanguage=JavaScript Ds.g4 -visitor -no-listener -o atsds_bnf",
        "dsp": "antlr4 -Dlanguage=JavaScript Dsp.g4 -visitor -no-listener -o atsds_bnf",
        "antlr4": "run-p ds dsp",
        "rollup": "rollup --config rollup.config.mjs",
        "build": "run-s antlr4 rollup",
        "test": "cross-env NODE_OPTIONS='$NODE_OPTIONS --experimental-vm-modules' jest --config=jest.config.mjs",
        "all": "run-s build test"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@types/jest": "^30.0.0",
        "antlr4": "^4.13.2",
        "cross-env": "^10.1.0",
        "jest": "^30.2.0",
        "npm-run-all": "^4.1.5",
        "rollup": "^4.54.0",
        "rollup-plugin-copy": "^3.5.0"
    }
}
