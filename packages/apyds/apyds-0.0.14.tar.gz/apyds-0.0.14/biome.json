{
    "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
    "files": {
        "includes": ["**/*.mjs", "**/*.mts", "**/*.json", "**/*.ejs", "**/*.vue"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true
    },
    "assist": {
        "enabled": false
    }
}
