# MANIFEST.in - Controls what goes into sdist/wheel for PyPI
# See: https://packaging.python.org/en/latest/guides/using-manifest-in/

# ═══════════════════════════════════════════════════════════════════════════════
# INCLUDE - Essential files for the package
# ═══════════════════════════════════════════════════════════════════════════════

include LICENSE
include README.md
include pyproject.toml
include requirements.txt

# Include the main package
recursive-include project_management_automation *.py

# Include prompts and error handler modules
include prompts.py
include error_handler.py

# ═══════════════════════════════════════════════════════════════════════════════
# EXCLUDE - Files that should NOT be in PyPI package
# ═══════════════════════════════════════════════════════════════════════════════

# --- Task Databases (project-specific, not part of package) ---
prune .todo2
prune .agentic-tools-mcp
exclude .todo2/*
exclude .agentic-tools-mcp/*
global-exclude state.todo2.json*
global-exclude *.todo2.json*

# --- Caches and Build Artifacts ---
prune __pycache__
prune *.egg-info
prune build
prune dist
prune .eggs
recursive-exclude * __pycache__
recursive-exclude * *.py[cod]
recursive-exclude * *.so
global-exclude *.pyc
global-exclude *.pyo
global-exclude .DS_Store
global-exclude Thumbs.db

# --- Virtual Environments ---
prune venv
prune .venv
prune env
prune .build-env

# --- IDE and Editor Files ---
prune .vscode
prune .idea
prune .cursor
global-exclude *.swp
global-exclude *.swo
global-exclude *~
global-exclude .cursorrules

# --- Testing (tests are excluded from wheel anyway) ---
prune tests
prune test-results
prune coverage-report
prune htmlcov
prune .pytest_cache
prune .tox
global-exclude .coverage
global-exclude coverage.xml

# --- Logs ---
prune logs
global-exclude *.log
global-exclude *.log.*

# --- Documentation (keep README, exclude rest) ---
prune docs
exclude docs/*

# --- Shell Scripts and Cron (not needed in package) ---
prune scripts
prune shell
exclude scripts/*
exclude shell/*

# --- Project-Specific Files (not needed for package users) ---
exclude AGENT_SETUP.md
exclude CONTEXT_HINTS.md
exclude DEPENDENCIES.md
exclude DUPLICATE_ANALYSIS.md
exclude HOW_TO_USE_PROMPTS.md
exclude INSTALL.md
exclude INTEGRATION_ANALYSIS.md
exclude INTENTIONAL_DUPLICATES.md
exclude LOGGING_FIX.md
exclude NAME_CHANGE.md
exclude PORTABILITY.md
exclude PROJECT_GOALS.md
exclude PROMPT_NAMES.md
exclude PROMPTS.md
exclude RESOURCES.md
exclude TOOLS_STATUS.md
exclude UPDATE_MCP_CONFIG.md
exclude USAGE.md
exclude openmemory.md

# --- Config Files (project-specific) ---
exclude MCP_CONFIG_EXAMPLE.json
exclude cspell.json
exclude setup.sh
exclude run_server.sh
exclude exarp-switch.sh
exclude notebooklm-config.json
exclude podcast.md
exclude podcast_for_notebooklm.md

# --- Runtime data directories ---
prune .exarp
prune chrome_profile_notebooklm

# --- Test Files at Root ---
exclude test_mcp_tools.py

# --- Backup Files ---
global-exclude *.bak
global-exclude *.tmp
global-exclude *.orig
global-exclude *~

# --- Git ---
prune .git
exclude .gitignore
exclude .gitattributes
exclude .pre-commit-config.yaml

