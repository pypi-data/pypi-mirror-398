# Langvio Environment Configuration Template
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Google AI Configuration (for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# Optional: LangSmith Configuration (for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=langvio

# Optional: Performance Settings
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# Optional: Default Model Settings
LANGVIO_DEFAULT_LLM=gemini
LANGVIO_DEFAULT_VISION=yolo_world_v2m