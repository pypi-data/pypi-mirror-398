{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug: Integration Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/test_integration.py", "-v"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug: Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debug: CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "cli.main",
            "args": ["--help"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
