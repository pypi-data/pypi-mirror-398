# Include README
include README.md
include INSTALL.md
include HOW_TO_USE.md
include GITHUB_PUSH.md

# Include license if exists
include LICENSE
recursive-include LICENSE *

# Include all Python source files
recursive-include *.py
recursive-include *.pyx
recursive-include *.pxi
recursive-include *.pxd

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
global-exclude *.egg-info
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

