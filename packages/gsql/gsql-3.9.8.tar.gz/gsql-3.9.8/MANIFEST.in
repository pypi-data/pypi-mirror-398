# MANIFEST.in pour GSQL
# Ce fichier contrôle les fichiers inclus dans les distributions source

# Inclure les fichiers de licence et README
include LICENSE
include logo.svg
include *.svg
include logo.*
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
# MANIFEST.in minimal pour GSQL v3.0.1
include LICENSE
include README.md
include requirements.txt
include setup.py
include pyproject.toml
include MANIFEST.in

# Package principal
recursive-include gsql *.py
recursive-include gsql *.pyi
recursive-include gsql *.json
recursive-include gsql *.yaml
recursive-include gsql *.txt
