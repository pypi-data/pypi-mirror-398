# Comprehensive .env example file for Subscriptio
# Copy this file to .env and fill in your actual values

# ===========================================
# MAIN SUBSCRIPTIONKORE CONFIGURATION
# ===========================================

# Database connection URL (required)
# Format: postgresql+asyncpg://user:password@host:port/database
SUBSCRIPTIONKORE_DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/subscriptionkore

# Redis URL for caching (optional)
# If not provided, in-memory cache will be used
SUBSCRIPTIONKORE_REDIS_URL=redis://localhost:6379/0

# Default payment provider (stripe, paddle, lemonsqueezy, chargebee)
SUBSCRIPTIONKORE_DEFAULT_PROVIDER=stripe

# Webhook processing mode (sync or async)
SUBSCRIPTIONKORE_WEBHOOK_PROCESSING=sync

# Entitlement cache TTL in seconds
SUBSCRIPTIONKORE_ENTITLEMENT_CACHE_TTL=300

# Days to keep processed event records for idempotency
SUBSCRIPTIONKORE_PROCESSED_EVENT_TTL_DAYS=7

# ===========================================
# STRIPE CONFIGURATION
# ===========================================

# Stripe secret API key (required for Stripe provider)
STRIPE_API_KEY=sk_test_...

# Stripe webhook signing secret (required for webhooks)
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe API version (optional, defaults to 2024-06-20)
STRIPE_API_VERSION=2024-06-20

# ===========================================
# PADDLE CONFIGURATION
# ===========================================

# Paddle API key (required for Paddle provider)
PADDLE_API_KEY=...

# Paddle webhook secret key (required for webhooks)
PADDLE_WEBHOOK_SECRET=...

# Paddle environment (sandbox or production)
PADDLE_ENVIRONMENT=sandbox

# Paddle seller/vendor ID (optional)
PADDLE_SELLER_ID=...

# ===========================================
# LEMON SQUEEZY CONFIGURATION
# ===========================================

# Lemon Squeezy API key (required for Lemon Squeezy provider)
LEMONSQUEEZY_API_KEY=...

# Lemon Squeezy webhook signing secret (required for webhooks)
LEMONSQUEEZY_WEBHOOK_SECRET=...

# Lemon Squeezy store ID (required)
LEMONSQUEEZY_STORE_ID=...

# ===========================================
# CHARGEBEE CONFIGURATION
# ===========================================

# Chargebee site name (required for Chargebee provider)
CHARGEBEE_SITE=your-site

# Chargebee API key (required)
CHARGEBEE_API_KEY=...

# Webhook basic auth username (optional)
CHARGEBEE_WEBHOOK_USERNAME=...

# Webhook basic auth password (optional)
CHARGEBEE_WEBHOOK_PASSWORD=...