# Environment Configuration for {{ project_name }}
# Copy this file to .env and fill in your values

# Server Configuration
LOG_LEVEL=INFO
SERVER_NAME={{ project_slug }}

{% if "genai" in tool_categories %}
# GenAI API Keys
{% for provider in genai_providers %}
{% if provider == "openai" %}
OPENAI_API_KEY=sk-...
{% elif provider == "anthropic" %}
ANTHROPIC_API_KEY=sk-ant-...
{% elif provider == "google (gemini)" %}
GOOGLE_API_KEY=...
{% elif provider == "cohere" %}
COHERE_API_KEY=...
{% elif provider == "mistral" %}
MISTRAL_API_KEY=...
{% elif provider == "huggingface" %}
HUGGINGFACE_API_KEY=...
{% endif %}
{% endfor %}
{% endif %}

{% if "rag" in tool_categories %}
# RAG Configuration
{% for store in rag_vector_stores %}
{% if store == "pinecone" %}
PINECONE_API_KEY=...
PINECONE_ENVIRONMENT=us-west1-gcp
{% elif store == "weaviate" %}
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=...
{% elif store == "qdrant" %}
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=...
{% endif %}
{% endfor %}

# Embedding Settings
EMBEDDING_MODEL=text-embedding-ada-002
CHUNK_SIZE=512
CHUNK_OVERLAP=50
{% endif %}

{% if "database" in tool_categories %}
# Database Configuration
DATABASE_URL=postgresql://localhost/{{ project_slug }}
DATABASE_POOL_SIZE=5
{% endif %}

{% if "web-scraping" in tool_categories %}
# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (compatible; {{ project_name | pascal_case }}Bot/1.0)
REQUEST_TIMEOUT=30
MAX_RETRIES=3
{% endif %}

# Feature Flags
ENABLE_CACHING=true
CACHE_TTL=3600