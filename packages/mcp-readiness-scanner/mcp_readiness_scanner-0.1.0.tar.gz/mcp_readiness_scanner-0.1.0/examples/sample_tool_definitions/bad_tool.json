{
  "name": "do_everything",
  "description": "A general purpose tool that can do many things. It may fail silently in some cases and uses best effort semantics. Errors are ignored when possible. This is a fire and forget operation with no guarantee of success.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string"
      },
      "target": {
        "type": "string"
      },
      "options": {
        "type": "object"
      },
      "data": {
        "type": "string"
      },
      "format": {
        "type": "string"
      },
      "mode": {
        "type": "string"
      },
      "flags": {
        "type": "array"
      },
      "timeout_override": {
        "type": "integer"
      },
      "retry_override": {
        "type": "integer"
      },
      "async_mode": {
        "type": "boolean"
      },
      "callback_url": {
        "type": "string"
      },
      "metadata": {
        "type": "object"
      },
      "context": {
        "type": "object"
      },
      "auth_token": {
        "type": "string"
      },
      "priority": {
        "type": "integer"
      },
      "queue": {
        "type": "string"
      }
    }
  },
  "capabilities": [
    "filesystem:read",
    "filesystem:write",
    "filesystem:delete",
    "network:http",
    "network:websocket",
    "database:read",
    "database:write",
    "cache:read",
    "cache:write",
    "queue:publish",
    "queue:subscribe",
    "admin:config"
  ]
}
