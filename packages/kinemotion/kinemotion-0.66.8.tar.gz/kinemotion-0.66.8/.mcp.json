{
  "mcpServers": {
    "exa": {
      "command": "direnv",
      "args": [
        "exec",
        "${PROJECT_ROOT}",
        "bunx",
        "-y",
        "exa-mcp-server"
      ]
    },
    "ref": {
      "command": "direnv",
      "args": [
        "exec",
        "${PROJECT_ROOT}",
        "bunx",
        "-y",
        "ref-tools-mcp@latest"
      ]
    },
    "sonarqube": {
      "command": "direnv",
      "args": [
        "exec",
        "${PROJECT_ROOT}",
        "java",
        "-jar",
        "${PROJECT_ROOT}/libs/sonarqube-mcp-server-1.4.0.1666.jar"
      ],
      "env": {
        "STORAGE_PATH": "/tmp/sonarqube"
      }
    },
    "basic-memory": {
      "command": "uvx",
      "args": [
        "basic-memory",
        "mcp",
        "--project=kinemotion"
      ],
      "env": {
        "BASIC_MEMORY_KEBAB_FILENAMES": "true"
      }
    },
    "sequential-thinking": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/arben-adm/mcp-sequential-thinking",
        "--with",
        "portalocker",
        "mcp-sequential-thinking"
      ]
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "${PROJECT_ROOT}"
      ]
    },
    "code-reasoning": {
      "command": "bunx",
      "args": [
        "-y",
        "@mettamatt/code-reasoning"
      ]
    }
  }
}
