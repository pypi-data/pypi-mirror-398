    <template
        id="report_purchaseorder_document_genci"
        inherit_id="purchase.report_purchaseorder_document"
    >
        <xpath expr="//td[@id='product']" position="inside">
            <t
                t-if="
                line.order_id.company_id.genci_enable
                and line.order_id.company_id.genci_show_in_reports
                and line.product_id
                and line.product_id.genci_has_amount
            "
            >
                <br />
                <span style="font-size:70%; opacity:0.7;">
                    Contribución GENCI (RD 1055/2022):
                    <span
                        t-field="line.genci_amount"
                        t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"
                    />
                </span>
            </t>
        </xpath>
    </template>
</odoo>
