    <record id="view_purchase_order_form_genci" model="ir.ui.view">
        <field name="name">purchase.order.form.genci</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <div name="reminder" position="after">
                <field name="genci_company" invisible="1" />
                <field
                    name="is_genci"
                    attrs="{'readonly': [('state', '!=', 'draft')],
                            'invisible': [('genci_company', '=', False)]}"
                />
            </div>
        </field>
    </record>
</odoo>
