<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_blacklisted_date_list" model="ir.ui.view">
        <field name="name">sale.blacklisted.date.list</field>
        <field name="model">blacklist.date</field>
        <field name="arch" type="xml">
            <list string="Blacklisted Dates">
                <field name="name" />
                <field name="date" />
                <field name="active" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sale_blacklisted_date_form" model="ir.ui.view">
        <field name="name">sale.blacklisted.date.form</field>
        <field name="model">blacklist.date</field>
        <field name="arch" type="xml">
            <form string="Blacklisted Date">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date" />
                        </group>
                        <group>
                            <field name="active" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sale_blacklisted_customers_list" model="ir.ui.view">
        <field name="name">sale.blacklisted.customers.list</field>
        <field name="model">blacklist.customer</field>
        <field name="arch" type="xml">
            <list string="Blacklisted Customers">
                <field name="name" />
                <field name="email" />
                <field name="street" />
                <field name="city" />
            </list>
        </field>
    </record>

    <record id="view_sale_blacklisted_customers_form" model="ir.ui.view">
        <field name="name">sale.blacklisted.customer.form</field>
        <field name="model">blacklist.customer</field>
        <field name="arch" type="xml">
            <form string="Blacklisted Customer">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="email" />
                            <field name="street" />
                            <field name="city" />
                        </group>
                        <group>
                            <field name="active" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
