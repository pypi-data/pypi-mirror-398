<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Menu item for blacklisted dates, placed under Sales configuration -->

    <!-- Action to open blacklisted dates -->
    <record id="action_sale_blacklisted_date" model="ir.actions.act_window">
        <field name="name">Blacklisted Dates</field>
        <field name="res_model">blacklist.date</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new blacklisted dates
            </p>
            <p>
                Configure dates that should be blacklisted for sales operations.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_sale_blacklisted_dates_root"
        name="Blacklisted Dates"
        action="action_sale_blacklisted_date"
        parent="sale.menu_sales_config"
        sequence="2"
    />

    <!-- Action to open blacklisted dates -->
    <record id="action_sale_blacklisted_customer" model="ir.actions.act_window">
        <field name="name">Blacklisted Customers</field>
        <field name="res_model">blacklist.customer</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add new blacklisted customers
            </p>
            <p>
                Configure customers that should be blacklisted for sales operations.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_sale_blacklisted_customers_root"
        name="Blacklisted Customers"
        action="action_sale_blacklisted_customer"
        parent="sale.menu_sales_config"
        sequence="3"
    />
</odoo>
